<?xml version = "1.0" encoding = "utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape = "rectangle">
            <gradient
                android:startColor = "#2dbd6e"
                android:endColor = "#d7f881"
                android:angle = "180"
                android:type = "linear" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke android:width="1dp"
                android:color="#F7D060"/>




        </shape>

    </item>
    <item>
        <shape
            android:shape = "rectangle">


            <gradient
                android:startColor = "#2dbd6e"
                android:endColor = "#d7f881"
                android:angle = "180"
                android:type = "linear" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
</selector>