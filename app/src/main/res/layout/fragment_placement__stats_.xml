<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Placement_Stats_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content"
                    app:startIconTint="@color/white"
                    android:elevation="10dp"
                    android:hint="@string/selectyear"
                    app:startIconDrawable="@drawable/baseline_date_range_24"
                    android:textColorHint="@color/white"
                    android:theme="@style/LoginTextInputLayoutStyle"
                    >
                    <AutoCompleteTextView
                        android:background="@drawable/edittext_style"

                        android:id="@+id/auto_complete_txt"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="15sp" />


                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/uploadbutton"
                    android:layout_width="wrap_content"
                    android:elevation="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="20dp"
                    app:backgroundTint="@color/gray"
                    android:visibility="visible"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:src="@drawable/baseline_add_24" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        app:cardElevation="10dp"
                        android:layout_height="200dp"
                        android:elevation="10dp"

                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/students_placed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="hello"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/circleAnimationView1"
                                app:layout_constraintEnd_toEndOf="@+id/circleAnimationView1"
                                app:layout_constraintStart_toStartOf="@+id/circleAnimationView1"
                                app:layout_constraintTop_toTopOf="@+id/circleAnimationView1"></TextView>

                            <com.example.k_g.CircleAnimationView
                                android:id="@+id/circleAnimationView1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:text="Students Placed"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"></TextView>


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/companies_came"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@+id/circleAnimationView2"
                                app:layout_constraintEnd_toEndOf="@+id/circleAnimationView2"
                                app:layout_constraintStart_toStartOf="@+id/circleAnimationView2"
                                app:layout_constraintTop_toTopOf="@+id/circleAnimationView2"></TextView>

                            <com.example.k_g.CircleAnimationView
                                android:id="@+id/circleAnimationView2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:text="No.of Companies"
                                android:textColor="@color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"></TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <TextView
                               android:id="@+id/offers"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="@color/white"
                               android:textSize="15sp"
                               android:textStyle="bold"
                               app:layout_constraintBottom_toBottomOf="@+id/circleAnimationView3"
                               app:layout_constraintEnd_toEndOf="@+id/circleAnimationView3"
                               app:layout_constraintStart_toStartOf="@+id/circleAnimationView3"
                               app:layout_constraintTop_toTopOf="@+id/circleAnimationView3"></TextView>

                           <com.example.k_g.CircleAnimationView
                               android:id="@+id/circleAnimationView3"
                               android:layout_width="100dp"
                               android:layout_height="100dp"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintEnd_toEndOf="parent"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toTopOf="parent" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="10dp"
                               android:gravity="center"
                               android:textSize="15sp"
                               android:text="No. of offers"
                               android:textColor="@color/white"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintEnd_toEndOf="parent"
                               app:layout_constraintHorizontal_bias="0.0"
                               app:layout_constraintStart_toStartOf="parent"></TextView>

                       </androidx.constraintlayout.widget.ConstraintLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardElevation="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <TextView

                               android:id="@+id/avg_ctc"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="@color/white"
                               android:textSize="15sp"
                               android:textStyle="bold"
                               app:layout_constraintBottom_toBottomOf="@+id/circleAnimationView4"
                               app:layout_constraintEnd_toEndOf="@+id/circleAnimationView4"
                               app:layout_constraintStart_toStartOf="@+id/circleAnimationView4"
                               app:layout_constraintTop_toTopOf="@+id/circleAnimationView4"></TextView>

                           <com.example.k_g.CircleAnimationView
                               android:id="@+id/circleAnimationView4"
                               android:layout_width="100dp"
                               android:layout_height="100dp"

                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintEnd_toEndOf="parent"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toTopOf="parent" />

                           <TextView


                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="10dp"
                               android:gravity="center"
                               android:text="Average CTC"
                               android:textColor="@color/white"
                               android:textSize="15sp"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintEnd_toEndOf="parent"
                               app:layout_constraintStart_toStartOf="parent"></TextView>

                       </androidx.constraintlayout.widget.ConstraintLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        app:cardElevation="10dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                      <androidx.constraintlayout.widget.ConstraintLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                          <TextView
                              android:id="@+id/highest_ctc"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="@color/white"
                              android:textSize="15sp"
                              android:textStyle="bold"
                              app:layout_constraintBottom_toBottomOf="@+id/circleAnimationView5"
                              app:layout_constraintEnd_toEndOf="@+id/circleAnimationView5"
                              app:layout_constraintStart_toStartOf="@+id/circleAnimationView5"
                              app:layout_constraintTop_toTopOf="@+id/circleAnimationView5"></TextView>

                          <com.example.k_g.CircleAnimationView
                              android:id="@+id/circleAnimationView5"
                              android:layout_width="100dp"
                              android:layout_height="100dp"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent" />

                          <TextView

                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginBottom="10dp"
                              android:gravity="center"
                              android:text="Highest CTC"
                              android:textColor="@color/white"
                              android:textSize="15sp"
                              app:layout_constraintBottom_toBottomOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintStart_toStartOf="parent"></TextView>

                      </androidx.constraintlayout.widget.ConstraintLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>