<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Placement_Stats_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"


                    android:hint="@string/selectyear"


                    android:textColorHint="@color/white"
                    android:theme="@style/LoginTextInputLayoutStyle"
                    >

                    <AutoCompleteTextView
                        android:background="#323232"
                        android:id="@+id/auto_complete_txt"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="20sp">

                    </AutoCompleteTextView>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:id="@+id/students_placed"
                                android:layout_marginTop="40dp">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:text="Students Placed"
                                android:textColor="@color/white"
                                android:gravity="center">
                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:id="@+id/companies_came"
                                android:layout_marginTop="40dp">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:text="No.of Companies"
                                android:textColor="@color/white"
                                android:gravity="center">
                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:id="@+id/offers"
                                android:layout_marginTop="40dp">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:text="No. of offers"
                                android:textColor="@color/white"
                                android:gravity="center">
                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:id="@+id/avg_ctc"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginTop="40dp">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:text="Average CTC"
                                android:textColor="@color/white"
                                android:gravity="center">
                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#323232"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:id="@+id/highest_ctc"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginTop="40dp">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="30dp"
                                android:text="Highest CTC"
                                android:textColor="@color/white"
                                android:gravity="center">
                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>





</androidx.appcompat.widget.LinearLayoutCompat>